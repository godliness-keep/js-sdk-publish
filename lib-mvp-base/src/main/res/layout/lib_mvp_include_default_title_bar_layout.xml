<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/ib_left_lr_mvp"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/lib_mvp_selector_default"
        android:src="@drawable/lib_mvp_title_bar_ic_back"
        android:tint="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- 右侧按钮-->
    <ViewStub
        android:id="@+id/vs_right_button_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout="@layout/lib_mvp_title_bar_right_button_layout"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_title_lr_mvp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ib_left_lr_mvp"
        app:layout_constraintRight_toLeftOf="@+id/ll_right_title_bar_lib_mvp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBaseLine"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>