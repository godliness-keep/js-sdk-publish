<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_mvp_color_ff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_error_activity_load_style_lib_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lib_mvp_load_style_error"/>

    <TextView
        android:id="@+id/tv_error_load_style_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lib_mvp_string_loading_error"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="12sp"/>

    <include layout="@layout/lib_mvp_load_style_reset_view_layout"/>

</LinearLayout>